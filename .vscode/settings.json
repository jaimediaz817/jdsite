{
    // 1. Asocia TODOS los archivos .html de este proyecto con el lenguaje "django-html"
    "files.associations": {
        "**/*.html": "django-html"
    },

    // 2. Desactiva CUALQUIER formateador automático para los archivos "django-html"
    "[django-html]": {
        "editor.formatOnSave": false,
        "editor.defaultFormatter": null
    },

    // (Opcional) Si quieres mantener el formato en otros lenguajes
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "[javascript]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // Formateo automático en CSS y SCSS
    "[css]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "[scss]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    }    
}
